<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.canteensystem.LoginLayoutController"
            prefHeight="300" prefWidth="400">
    <children>
        <VBox alignment="CENTER" layoutX="100" layoutY="75" spacing="10">
            <children>
                <Label text="Username:" />
                <TextField fx:id="usernameField" />
                <Label text="Password:" />
                <PasswordField fx:id="passwordField" />
                <Button text="Login" onAction="#handleSubmitButtonAction" />
            </children>
        </VBox>
    </children>
</AnchorPane>